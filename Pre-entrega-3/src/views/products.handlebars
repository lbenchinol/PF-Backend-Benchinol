<header>
    <p>Nombre: {{user.first_name}}</p>
    <p>Apellido: {{user.last_name}}</p>
    <p>Correo electr√≥nico: {{user.email}}</p>
    <a href="/profile" role="button">Perfil</a>
</header>

<div class="center">
    <h1>Productos</h1>
</div>
<table role="grid">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">title</th>
            <th scope="col">description</th>
            <th scope="col">category</th>
            <th scope="col">price</th>
            <th scope="col">thumbnail</th>
            <th scope="col">code</th>
            <th scope="col">stock</th>
            <th scope="col">status</th>
            {{!-- <th scope="col"></th> --}}
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this._id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.category}}</td>
            <td>{{this.price}}</td>
            <td>{{this.thumbnail}}</td>
            <td>{{this.code}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.status}}</td>
            {{!-- <td>
                <button id={{this._id}} class="secondary btnAddToCart">+</button>
            </td> --}}
        </tr>
        {{/each}}
    </tbody>
</table>

